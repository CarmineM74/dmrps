!!! 5
%html(ng-app='dmrps')
  %head
    %meta(charset='utf-8')
    %title Remote RPS DM Computers 
    = stylesheet_link_tag 'bootstrap'
    = stylesheet_link_tag 'angular-ui'
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.23/jquery-ui.min.js'
    = javascript_include_tag 'bootstrap'
    = javascript_include_tag 'bootbox.min'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/angularjs/1.0.2/angularjs.min.js'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/angularjs/1.0.2/angular-resource.min.js'
    = javascript_include_tag 'angular-ui'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body(ng-controller='MainCtrl')
    %div.navbar.navbar-fixed-top
      %div.navbar-inner
        %a.brand(href='/')DM RPS
        %ul.nav
          %li.dropdown
            %a.dropdown-toggle(href='#' data-toggle='dropdown')
              Sistema
              %b.caret
            %ul.dropdown-menu
              %li
                %a(href='#/users')Gestione utenti
              %li
                %a(href='#/clients')Gestione clienti
        %ul.nav.pull-right
          %li(ng-show='currentUser()')
            %button(type='button' class='btn' ng-click='logout()')Logout
          %li
            %a
              %img#spinner(src='assets/spinner.gif')
        %form.navbar-form.pull-right(ng-hide='currentUser()')
          %input.input-small(type='text' placeholder='E-mail' ng-model='loginInfo.email')
          %input.input-small(type='password' placeholder='Password' ng-model='loginInfo.password')
          %button.btn(type='button' ng-click='login()')Login

    %div.container(ng-view)


